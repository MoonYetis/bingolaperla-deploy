{
  "name": "bingo-la-perla-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend PWA para Bingo La Perla de 75 bolas",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:purchase-flow": "playwright test carton-purchase.spec.ts --headed",
    "test:balance": "playwright test balance-tracking.spec.ts --headed",
    "test:game-data": "playwright test game-data-validation.spec.ts --headed",
    "health": "curl -f http://localhost:3000 || exit 1",
    "analyze": "vite-bundle-analyzer dist",
    "docker:build": "docker build -t bingo-frontend .",
    "docker:run": "docker run -p 3000:3000 bingo-frontend",
    "production:build": "NODE_ENV=production npm run build",
    "production:preview": "NODE_ENV=production npm run preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@reduxjs/toolkit": "^2.0.1",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "lucide-react": "^0.295.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^0.17.4"
  },
  "keywords": [
    "bingo",
    "pwa",
    "react",
    "typescript",
    "tailwind"
  ],
  "author": "Bingo Team",
  "license": "MIT"
}
