# Production Environment Variables
# IMPORTANT: Change all secrets and passwords before deploying
NODE_ENV=production
LOG_LEVEL=info

# Server Configuration
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Database Configuration (PostgreSQL)
POSTGRES_DB=bingo_production
POSTGRES_USER=bingo_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_FOR_PRODUCTION
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# JWT Secrets (CRITICAL - Generate secure keys for production)
JWT_SECRET=GENERATE_SECURE_32_CHAR_SECRET_FOR_PRODUCTION
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_32_CHAR_SECRET_FOR_REFRESH

# CORS Configuration (adjust for your domain)
FRONTEND_URL=https://yourdomain.com

# Frontend Build Variables (adjust for your domain)
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_SOCKET_URL=https://api.yourdomain.com

# Rate Limiting (production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
REGISTER_RATE_LIMIT_MAX=5

# SSL Configuration (when using HTTPS)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here