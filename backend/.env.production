# Database (PostgreSQL para producci√≥n)
DATABASE_URL="postgresql://username:password@localhost:5432/bingo_production"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="super_secure_jwt_secret_32_characters_minimum_change_this"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="super_secure_refresh_secret_32_characters_minimum_change"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=production

# CORS
FRONTEND_URL="https://yourdomain.com"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Gateway (Izipay)
IZIPAY_PUBLIC_KEY="your_production_izipay_public_key"
IZIPAY_PRIVATE_KEY="your_production_izipay_private_key"
IZIPAY_ENDPOINT="https://online.izipay.pe/comprar/negocio"

# Agora SDK (para streaming)
AGORA_APP_ID="your_production_agora_app_id"
AGORA_APP_CERTIFICATE="your_production_agora_certificate"