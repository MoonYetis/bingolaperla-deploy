{
  "name": "bingo-backend",
  "version": "1.0.0",
  "description": "Backend para Bingo Online de 75 bolas",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:reset": "prisma migrate reset",
    "db:setup": "npm run prisma:generate && npm run prisma:migrate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:openpay": "jest --testPathPattern=openpay",
    "test:openpay:unit": "jest src/__tests__/services/openpayService.test.ts",
    "test:openpay:integration": "jest src/__tests__/integration/openpayEndpoints.test.ts",
    "test:openpay:e2e": "jest src/__tests__/e2e/openpayPaymentFlow.test.ts",
    "test:security": "jest --testPathPattern=security",
    "test:ci": "jest --coverage --watchAll=false --runInBand",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "health:detailed": "curl -f http://localhost:3001/api/performance/health || exit 1",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "performance": "node -e \"console.log('Performance test would run here')\"",
    "security:scan": "echo 'Security scan would run here'",
    "docker:build": "docker build -t bingo-backend .",
    "docker:run": "docker run -p 3001:3001 bingo-backend",
    "production:start": "NODE_ENV=production npm run start",
    "production:migrate": "NODE_ENV=production npm run prisma:migrate:prod",
    "openpay:verify": "node scripts/verify-openpay-env.js",
    "openpay:examples": "node examples/openpay-mock-usage.js",
    "demo:update-pearls": "ts-node scripts/update-demo-pearls.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@types/socket.io": "^3.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "prisma": "^5.7.1",
    "redis": "^4.6.11",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "bingo",
    "websocket",
    "streaming",
    "typescript"
  ],
  "author": "Bingo Team",
  "license": "MIT",
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
