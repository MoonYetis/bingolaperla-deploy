# Development Environment Configuration for Openpay Mock Testing
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="file:./dev.db"
REDIS_URL="redis://localhost:6379"

# JWT Secrets (for development only - NEVER use in production)
JWT_SECRET="development_jwt_secret_key_minimum_32_characters"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="development_refresh_secret_key_minimum_32_characters"
JWT_REFRESH_EXPIRES_IN="7d"

# Frontend Configuration
FRONTEND_URL="http://localhost:3000"

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Openpay Development Configuration (MOCK MODE)
OPENPAY_MERCHANT_ID="mock_merchant_id_dev"
OPENPAY_PRIVATE_KEY="mock_private_key_dev"
OPENPAY_PUBLIC_KEY="mock_public_key_dev"
OPENPAY_PRODUCTION="false"
OPENPAY_WEBHOOK_USERNAME="mock_webhook_user"
OPENPAY_WEBHOOK_PASSWORD="mock_webhook_pass"

# Other Payment Integrations (Optional for development)
IZIPAY_PUBLIC_KEY=""
IZIPAY_PRIVATE_KEY=""
IZIPAY_ENDPOINT=""

# Agora Configuration (Optional for development)
AGORA_APP_ID=""
AGORA_APP_CERTIFICATE=""

# Development-specific features
LOG_LEVEL="debug"
MOCK_PAYMENTS="true"
MOCK_EXTERNAL_SERVICES="true"