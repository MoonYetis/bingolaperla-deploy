# Database
DATABASE_URL="postgresql://user:password@localhost:5432/bingo_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your_super_secret_jwt_key_here_change_this_in_production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your_refresh_token_secret_here"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development

# CORS
FRONTEND_URL="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Gateway (Izipay)
IZIPAY_PUBLIC_KEY="your_izipay_public_key"
IZIPAY_PRIVATE_KEY="your_izipay_private_key"
IZIPAY_ENDPOINT="https://online.izipay.pe/comprar/negocio"

# Agora SDK (para streaming)
AGORA_APP_ID="your_agora_app_id"
AGORA_APP_CERTIFICATE="your_agora_certificate"